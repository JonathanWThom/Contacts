<h1> Add a new email address for <%= @contact.first_name() %> </h1>

<form action="/email" method="post">

  <input id='contact_id' name='contact_id' type='hidden' value='<%= @contact.id() %>'>

  <div class="form-group">
    <label for="email">Email</label>
    <input name="email">
  </div>
  <div class="form-group">
    <label for="type">Type</label>
    <input name="type">
  </div>

  <button type="submit" class="btn">Add Email Address</button>
</form>
